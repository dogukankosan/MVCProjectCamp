@model EntitiyLayer.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("SideBard", "WriterMessage")
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                    </div>
                    @using (Html.BeginForm("NewMessage", "WriterMessage", FormMethod.Post))
                    {
                        <div class="card-body">
                            <div class="form-group">
                                @Html.DropDownListFor(x =>x.Receiver, (List<SelectListItem>)ViewBag.writer, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Receiver, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", required = "", @placeholder = "Konu.." })
                                @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextAreaFor(x => x.ContextText, new { @class = "form-control",required="", @style = "height: 300px", @id = "compose-textarea" })
                                @Html.ValidationMessageFor(x => x.ContextText, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>