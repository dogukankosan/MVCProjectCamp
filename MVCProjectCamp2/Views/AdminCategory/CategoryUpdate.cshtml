@model EntitiyLayer.Concrete.Category
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mt-0 text-dark">KATEGORİ GÜNCELLEME SAYFASI</h2>
<hr />
@using (Html.BeginForm("CategoryUpdate", "AdminCategory", FormMethod.Post))
{
    @Html.HiddenFor(x => x.CategoryID)
    @Html.HiddenFor(x=>x.Status)
    <br />
    <label>KATEGORİ ADI</label>
    @Html.TextBoxFor(x => x.CategoryName, new { placeholder = "Kategori Adı Yazınız..", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName,"",new {@class="text-danger"})
    <br/>
    <br />
    <label>KATEGORİ AÇIKLAMASI</label>
    @Html.TextAreaFor(x => x.CategoryDescription, new { placeholder = "Kategori Açıklama Yazınız..", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger"})
    <br />
    <br />
    <button class="btn btn-outline-success">GÜNCELLE</button>
}