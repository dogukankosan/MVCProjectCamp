@model List<EntitiyLayer.Concrete.Message>
@{
    ViewBag.Title = "SendMail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="row">
        @Html.Action("SideBar", "AdminContact")
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Gönderilen Mesaj</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive mailbox-messages">
                        <table id="tbl1" class="table table-hover table-striped">
                            <thead>
                            <th>Mesaj Yollanan</th>
                            <th>Mesaj Konu</th>
                            <th>Tarih</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="mailbox-name"><a href="~/Message/GetBySendMail/@item.ID">@item.Receiver</a></td>
                                        <td class="mailbox-subject">
                                            <b>@item.Subject</b>
                                        </td>
                                        <td class="mailbox-date">@(((DateTime)item.MessageDate).ToString("f"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $('#tbl1').DataTable(
        {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        }
    );
</script>
@if (!string.IsNullOrEmpty(ViewBag.add) && ViewBag.add == "add")
{
    <script type="text/javascript">
        window.onload = function () {
            swal("Başarılı!", "Mesaj Gönderme İşlemi Başarılı", "success");
        };
    </script>
}
@if (!string.IsNullOrEmpty(ViewBag.delete) && ViewBag.delete == "delete")
{
    <script type="text/javascript">
        window.onload = function () {
            swal("Başarılı!", "Mesaj Silme İşlemi Başarılı", "success");
        };
    </script>
}
@if (!string.IsNullOrEmpty(ViewBag.status) && ViewBag.status == "status")
{
    <script type="text/javascript">
        window.onload = function () {
            swal("Başarılı!", "Mesaj Geri Getirme İşlemi Başarılı", "success");
        };
    </script>
}