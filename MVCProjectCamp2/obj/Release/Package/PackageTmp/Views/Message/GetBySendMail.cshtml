@model EntitiyLayer.Concrete.Message
@{
    ViewBag.Title = "GetBySendMail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="row">
        @Html.Action("SideBar", "AdminContact")
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Giden Kutusu Detay</h3>
                </div>
                <div class="card-body p-0">
                    <div class="mailbox-read-info">
                        <h5>@Model.Subject</h5>
                        <h6>
                            Kime Gönderildi: <a href="mailto:@Model.Receiver">@Model.Receiver</a>
                            <br />
                            <img height="50" width="50" src="@ViewBag.image" />
                            <br />
                            <p>@ViewBag.name</p><br />
                            <span class="mailbox-read-time float-right">@(((DateTime)Model.MessageDate).ToString("f"))</span>
                        </h6>
                    </div>

                    <div class="mailbox-read-message">
                        <p>@ViewBag.dgr</p>
                        <p>
                            @Html.Raw(Model.ContextText)
                        </p>
                    </div>
                </div> 
                <div class="card-footer">
                    <a href="~/Message/Delete/@Model.ID" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</a>
                </div>
            </div>
         
        </div>
    </div>
</section>