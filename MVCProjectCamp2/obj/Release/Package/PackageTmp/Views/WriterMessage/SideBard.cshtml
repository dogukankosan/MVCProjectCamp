<div class="col-md-3">
    <div class="card">
        <a href="~/WriterMessage/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="~/WriterMessage/List" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.inbox</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/WriterMessage/SendMail" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.send</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/WriterMessage/DeleteList" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-danger float-right">@ViewBag.delete</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>