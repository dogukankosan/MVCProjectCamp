@model EntitiyLayer.Concrete.Category
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="m-0 text-dark">
        YENİ KATEGORİ EKLEME SAYFASI
    </h2>
    <hr/>
@using (Html.BeginForm("CategoryAdd", "AdminCategory", FormMethod.Post))
{
    <br />
    <label>KATEGORİ İSMİ :</label>
    <br />
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control",@MaxLength=50, @placeholder = "Kategori Adı Yazınız.." })
    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
    <br />
    <br />
    <label>KATEGORİ AÇIKLAMASI :</label>
    <br />
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", @MaxLength = 250, @placeholder = "Kategori Açıklaması Yazınız.." })
    @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-outline-success" type="submit">KATEGORİ EKLE</button>
}